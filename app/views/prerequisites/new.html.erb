<h1>New prerequisite</h1>

<% form_for([:subject, @prerequisite]) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :prereq_id %><br />
    <%= f.select :prereq_id, Subject.all.map { |s| [s.name, s.id] } %>
  </p>

  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', subject_prerequisites_path %>